<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="71dp" >

        <TextView
            android:id="@+id/username_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="43dp"
            android:text=""
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_language_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_show" >
            
        </Spinner>

        <AutoCompleteTextView
            android:id="@+id/actv_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/spinner_language_type"
            android:layout_below="@+id/username_show"
            android:ems="10"
            android:hint="@string/actv_hint" >

            <requestFocus />
        </AutoCompleteTextView>

    </RelativeLayout>
<Button
    android:id="@+id/button_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/search_button"
   />

<TextView
    android:id="@+id/result_show"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="21sp"
    android:textColor="#ff0022"
    android:text="" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/btn_home" />
    
    <Button
        android:id="@+id/btn_notebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/note_book" />
    <Button
        android:id="@+id/btn_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/btn_mine" />


</RelativeLayout>

</LinearLayout>
