<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    
<Spinner 
    android:id="@+id/spinner_language_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
<AutoCompleteTextView 
    android:id="@+id/actv_word"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/actv_hint"
    android:layout_toEndOf="@id/spinner_language_type" 
    />
<Button
    android:id="@+id/button_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/search_button"
    android:layout_below="@id/spinner_language_type"
   />

<TextView
    android:id="@+id/result_show"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@id/button_search"
    android:textSize="21sp"
    android:textColor="#ff0022"
    android:text="" />

</RelativeLayout>
