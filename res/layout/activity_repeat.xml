<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/repeat_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/dict_selected" />

    <Button
        android:id="@+id/repeat_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/dict_pause" />

    <Button
        android:id="@+id/repeat_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="再来一组" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/word_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:textSize="30sp" />

    <Button
        android:id="@+id/know_this_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/repeat_homepage"
        android:layout_marginBottom="70dp"
        android:layout_toLeftOf="@+id/repeat_next"
        android:text="认识" />

    <Button
        android:id="@+id/not_know_this_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/know_this_word"
        android:layout_alignBottom="@+id/know_this_word"
        android:layout_alignRight="@+id/repeat_next"
        android:text="不认识" />

    <Button
        android:id="@+id/next_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/not_know_this_word"
        android:layout_alignBottom="@+id/not_know_this_word"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:background="@drawable/next_word" 
         android:visibility="invisible" />

    <Button
        android:id="@+id/unkown_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/know_this_word"
        android:layout_alignParentLeft="true"
        android:background="@drawable/add_note" />

</RelativeLayout>
